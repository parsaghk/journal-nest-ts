{
  "name": "journal-nest-ts",
  "version": "0.0.1",
  "description": "journal nest application",
  "author": "Parsa Ghadimkhani",
  "license": "UNLICENSED",
  "private": "true",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch --config jest-unit.config.json",
    "test:cov": "jest --coverage --config jest-unit.config.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "migration:list": "mikro-orm migration:list",
    "migration:pending": "mikro-orm migration:pending",
    "migration:fresh": "mikro-orm migration:fresh",
    "seeder:create": "mikro-orm seeder:create",
    "seeder:run": "mikro-orm seeder:run"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.7.13",
    "@mikro-orm/core": "^5.7.13",
    "@mikro-orm/migrations": "^5.7.13",
    "@mikro-orm/nestjs": "^5.2.0",
    "@mikro-orm/postgresql": "^5.7.13",
    "@mikro-orm/seeder": "^5.7.13",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "flat": "^5.0.2",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "nestjs-i18n": "^10.2.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@nestjs/cli": "^10.1.8",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/express": "^4.17.17",
    "@types/flat": "^5.0.2",
    "@types/jest": "29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "20.4.2",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/providers/database/postgres/mikro-orm.config.js",
      "./src/providers/database/postgres/mikro-orm.config.js"
    ]
  }
}
